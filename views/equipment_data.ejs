<!-- Portfolio Section -->
<div id="portfolio">
  <div class="section-title text-center center">
    <div class="overlay">
      <h2>EQUIPMENT</h2>
      <hr>
      <p>ครุภัณฑ์ทั้งหมดที่นิสิตสามารถยืมได้</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
         <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="portfolio-item">
              <img src="/portfolio/<%= types[0].set_pic%>" class="img-responsive" alt="<%= types[0].set_name%>">
            </div>
            <h3>ตารางการใช้งานอุปกรณ์</h3><hr>
            <div id="datepicker" class="calendar"></div>
          </div>

          <div class="col-sm-6 col-md-6 col-lg-6">
          <h3>รายชื่ออุปกรณ์ในเซต</h3><hr>
          <table class="table">
              <thead>
                <% var i = 0; %>
                <% if (types.length > 0) {%>
                    <% types.forEach((value, index) => { %>
                        <% var y = value.type_id; %>
                        <tr>
                            <th style="width: 10%;" scope="col"><%= i = i+1;%></th style="width: 15%;">
                            <th style="width: 75%;" scope="col"><%= value.type_name%></th style="width: 73%;">
                            <th style="width: 15%;" scope="col">จำนวน</th>
                        </tr>
              </thead>
              <tbody>
                <% if (setEquip.length > 0 ) {%>
                  <% setEquip.forEach((equips, index) => { %>
                    <% var x = equips.type_id; %>
                    <% if ( x === y ) {%>
                      <tr>
                        <th style="width: 10%;" scope="row"></th style="width: 12%;">
                        <td style="width: 75%;"><%= equips.equip_name %></td style="width: 73%;">
                        <td style="width: 15%;"><%= equips.equip_amount %></td>
                      </tr>
                    <% } %>
                  <% }) %>
                <% } %>
              </tbody>
                <% }) %>
                <% } %>
            </table>
          </div>
        </div>
  </div>
