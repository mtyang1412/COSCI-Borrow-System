    <div class="row">
      <div class="portfolio-items">
        <% if (sets.length > 0) {%>
          <% sets.forEach((value, index) => { %>
          <div class="col-xs-6 col-md-3 col-lg-3 <%= value.set_category %>">
            <div class="portfolio-item">
              <div class="hover-bg"> 
                <a href="/equip/<%=value.set_id%>" title="<%= value.set_name %>">
                  <div class="hover-text">
                    <h4>MORE</h4>
                  </div>
                  <img src="/portfolio/<%= value.set_pic %>" class="img-responsive" alt="<%= value.set_name %>">
                </a>
              </div>
            </div>
          </div>
          <% }) %>
        <% } %>

      </div>
    </div>
  </div>
