    </div>
</div>

<!-- Portfolio Section -->
<div id="portfolio">
  <div class="section-title text-center center">
    <div class="overlay">
      <h2>EQUIPMENT</h2>
      <hr>
      <p>ครุภัณฑ์ทั้งหมดที่นิสิตสามารถยืมได้</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="categories">
        <ul class="cat">
          <li>
            <ol class="type">
              <li><a href="#" data-filter="*" class="active">All</a></li>
              <li><a href="#" data-filter=".camera">CAMERA</a></li>
              <li><a href="#" data-filter=".assessory">ACCESSORY</a></li>
              <li><a href="#" data-filter=".device">DEVICE</a></li>
            </ol>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="row">
      <div class="portfolio-items">
        <% if (sets.length > 0) {%>
          <% sets.forEach((value, index) => { %>
          <div class="col-xs-6 col-md-3 col-lg-3 <%= value.set_category %>">
            <div class="portfolio-item">
              <div class="hover-bg"> 
                <a href="/equip/<%=value.set_id%>" title="<%= value.set_name %>">
                  <div class="hover-text">
                    <h4>MORE</h4>
                  </div>
                  <img src="/portfolio/<%= value.set_pic %>" class="img-responsive" alt="<%= value.set_name %>">
                </a>
              </div>
            </div>
          </div>
          <% }) %>
        <% } %>

      </div>
    </div>
  </div>
</div>

