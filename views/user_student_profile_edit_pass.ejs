                            <div class="main-box clearfix">
                                <div class="profile-header">
                                    <h3><span>ข้อมูลส่วนตัว</span></h3>
                                    <div class="edit">
                                        <div class="dropdown edit-profile">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-gear"></i></button>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="/user_student/<%= datas.mem_username %>/profile/edit-info">แก้ไขข้อมูลส่วนตัว</a></li>
