<script>
$('.confirm').click(function(){  
    swal({
			title: 'เปลี่ยนรหัสผ่านสำเร็จ',
			text: 'แก้ไขรหัสผ่านเรียบร้อยแล้ว!',
			type: 'success',
            confirmButtonText: '<a href="/user_student/<%= datas.mem_username%>/profile" style="color: #fff; padding: 20px;">กลับไปหน้าโปรไฟล์</a>',
		});
});

$("#pass1").keyup(function(){
    if ($("#pass1").val() == $("#pass2").val()) {
      $("#show-pass").hide();
      $("#submit-reset").attr("disabled", false);
    }
    else {
      $("#show-pass").show();
      $("#submit-reset").attr("disabled", true);
    }
})

$("#pass2").keyup(function(){
    if ($("#pass1").val() === $("#pass2").val()) {
      $("#show-pass").hide();
      $("#submit-reset").attr("disabled", false);
    }
    else {
      $("#show-pass").show();
      $("#submit-reset").attr("disabled", true);
    }
})

$("#password1").keyup(function(){
    if ($("#password1").val() === $("#password2").val()) {
      $("#show-pass-old").hide();
    }
    else {
      $("#show-pass-old").show();
      $("#submit-reset").attr("disabled", true);
    }
})

</script>
