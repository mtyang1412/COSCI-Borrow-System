                                    </div>
                                </div>

                                <form method="post">
                                <div class="row profile-user-info">
                                    <div class="col-sm-12 col-lg-5 col-md-12">
                                        <div class="profile-user-details clearfix">
                                            <div class="profile-user-details-label">
                                                รหัสนิสิต
                                            </div>
                                            <div class="profile-user-details-value">
                                                : <%= datas.mem_id%>
                                            </div>
                                        </div>
                                        <div class="profile-user-details clearfix">
                                            <div class="profile-user-details-label">
                                                ชื่อ-นามสกุล
                                            </div>
                                            <div class="profile-user-details-value">
                                                : <%= datas.stu_name%>
                                            </div>
                                        </div>
                                        <div class="profile-user-details clearfix">
                                            <div class="profile-user-details-label">
                                                รหัสผ่านเดิม
                                            </div>
                                            <div class="profile-user-details-value">
                                                <input class="form-field" id="password1" name="password" type="password">
                                                <span id="show-pass-old" style="display: none; color: crimson;">รหัสผ่านไม่ถูกต้อง</span>
                                            </div>
                                            <div class="profile-user-details-value" style="display: none;">
                                                <input class="form-field" type="password" id="password2" value="<%= datas.mem_password%>">
                                            </div>
                                        </div>
                                        <div class="profile-user-details clearfix">
                                            <div class="profile-user-details-label">
